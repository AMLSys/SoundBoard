<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SoundBoard_UI"
        xmlns:Themes="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero2" x:Class="SoundBoard_UI.MainWindow"
        mc:Ignorable="d"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Title="SoundBoard" Height="450" Width="800"
        Background="#131d25">
    <DockPanel x:Name="RootWindow">
        <DockPanel x:Name="TitleBar" DockPanel.Dock="Top" Background="#282f3a"  MouseDown="TitleBar_MouseDown">
            <Button x:Name="CloseButton"
                    Style="{StaticResource TitleButton}"
                    Click="CloseButton_Click"
                    DockPanel.Dock="Right">
                <Ellipse x:Name="eClose" Width="10" Height="10" Fill="#f54e4e"/>
            </Button>
            <Button x:Name="MinButton"
                    Style="{StaticResource TitleButton}"
                    Click="MinimizeButton_Click"
                    DockPanel.Dock="Right">
                <Ellipse x:Name="eMinimize" Width="10" Height="10" Fill="#f5c34e"/>
            </Button>

            <TextBlock HorizontalAlignment="Center" Foreground="White">SoundBoard</TextBlock>
        </DockPanel>
        <Grid >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel x:Name="spContainerLeft" Margin="20">
                <StackPanel.Resources>
                    <Style TargetType="{x:Type TextBlock}">
                        <Setter Property="Margin" Value="0, 10, 0, 10"/>
                        <Setter Property="Foreground" Value="#ffffff"/>
                    </Style>
                    <Style TargetType="{x:Type ComboBoxItem}">
                        <Setter Property="Foreground" Value="#e8ecf1"/>
                    </Style>
                </StackPanel.Resources>

                <TextBlock>Playback Device</TextBlock>

                <ComboBox x:Name="cbPlayback" Height="25" Style="{StaticResource ComboBoxRoundedCornersStyle}"/>

                <TextBlock>Recording Device</TextBlock>

                <ComboBox x:Name="cbRecording" Height="25" Style="{StaticResource ComboBoxRoundedCornersStyle}"/>

                <StackPanel x:Name="spAudioButtonsContainer" Orientation="Horizontal" Margin="0, 10, 0, 0" >
                    <StackPanel.Resources>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Padding" Value="10"/>
                        </Style>
                    </StackPanel.Resources>
                    <Button x:Name="btnRecordingStart" Style="{DynamicResource MainButton}" Click="btnRecordingStart_Click" Content="Start" Margin="0,0,10,0"/>
                    <Button x:Name="btnRecordingStop" Style="{StaticResource MainButton}" Click="btnRecordingStop_Click" Content="Stop" Margin="10,0,10,0"/>
                    <Button x:Name="btnRecordingSave" Style="{StaticResource MainButton}" Click="btnRecordingSave_Click" Content="Save" Margin="10,0,0,0"/>
                </StackPanel>
                
                <Canvas x:Name="cVisualiser" Height="100"/>
            </StackPanel>
        </Grid>
    </DockPanel>
    
</Window>
