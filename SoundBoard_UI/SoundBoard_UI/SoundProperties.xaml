<Window x:Class="SoundBoard_UI.SoundProperties"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SoundBoard_UI"
        mc:Ignorable="d"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Title="Manage Sound" Height="150" Width="350"
        Background="#131d25">
    <DockPanel x:Name="RootWindow">
        <DockPanel x:Name="TitleBar" DockPanel.Dock="Top" Background="#282f3a"  MouseDown="TitleBar_MouseDown">
            <Button x:Name="CloseButton"
                    Style="{StaticResource TitleButton}"
                    Click="CloseButton_Click"
                    DockPanel.Dock="Right"
                    Margin="0,0,2,0">
                <Ellipse x:Name="eClose" Width="10" Height="10" Fill="#f54e4e"/>
            </Button>

            <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="White" Margin="10,0,0,0">Manage Sound</TextBlock>
        </DockPanel>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <StackPanel Margin="10, 10, 10, 0" Grid.Row="0">
                <Label Content="Sound Name:" Foreground="#e8ecf1"/>
                <TextBox x:Name="tbSoundName" Grid.Row="0" Background="#263365" BorderBrush="Transparent" Foreground="#e8ecf1"/>
            </StackPanel>
            <Grid Margin="10, 0, 10, 10" Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label x:Name="lblShortcut" Grid.Column="0" VerticalAlignment="Center" Content="No Current Shortcut" Foreground="#e8ecf1"/>
                <Button Grid.Column="1" HorizontalAlignment="Right" Style="{DynamicResource MainButton}" Width="100" Content="Add Shortcut"/>
            </Grid>
        </Grid>
    </DockPanel>
</Window>
